@using FF_Fastfood.Models;

<div class="pt-4">
    <a class="text-decoration-none" href="@Url.Action("Foods", "Chef")">
        <i class="fa-solid fa-arrow-left fs-4" style="color: black;"></i>
    </a>
</div>

<h1 class="pt-4">Thêm Món Ăn Mới</h1>
<div>
    @using (Html.BeginForm("Create", "Chef", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="name" id="name" placeholder=" " required>
            <label for="name" class="input-label">Tên món ăn</label>
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="decription" id="decription" placeholder=" " required>
            <label for="decription" class="input-label">Mô tả</label>
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="price" id="price" placeholder=" " required>
            <label for="price" class="input-label">Giá</label>
        </div>
        <div class="form-group">
            <select class="form-control" id="category_id" style="cursor: pointer;" name="category_id" required>
                <option value="">Chọn danh mục</option>
                @foreach (var category in Model)
                {
                    <option style="cursor: pointer;" value="@category.category_id">@category.category_name</option>
                }
            </select>            
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="image_url" id="image_url" placeholder=" " required>
            <label for="image_url" class="input-label">Hình ảnh</label>
        </div>
        <div class="form-group">
            <select class="form-control" id="enable" style="cursor: pointer;" name="enable" required>
                <option value="">Khả dụng</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>

            </select>
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="seo_title" id="seo_title" placeholder=" " required>
            <label for="seo_title" class="input-label">SEO Title</label>
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="seo_decription" id="seo_decription" placeholder=" " required>
            <label for="seo_decription" class="input-label">SEO Decription</label>
        </div>
        <div class="form-group">
            <input class="col-12 mb-2 w-100 input-login" type="text" name="seo_keyword" id="seo_keyword" placeholder=" " required>
            <label for="seo_keyword" class="input-label">SEO Keyword</label>
        </div>
        <div class="btn-login mb-3">
            <button type="submit" class="btn m-0">Thêm món ăn</button>
        </div>
    }
</div>
