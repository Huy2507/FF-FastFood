<!DOCTYPE html>

<html lang="vi">
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <meta charset="UTF-8">
    <title>Form Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="\Content\Admin.css" />
    <style>
        .MainContainer ul.pagination {
            width: 500px;
        }
    </style>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> @*Script for Chart*@
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script> @*Script for datepicker*@
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">

</head>
<body>
    <div class="container-fluid contain">
        <div style="width:306px">
            <nav class="sidebar aside">
                <div class="abc">
                    <div class="logo-menu" width="232" height="68">

                        <img src="~/images/logo.png" class="d-flex:float-lg-start my-logo ms-4" alt="">
                        <h2 class="logo"></h2>
                        <i id="toggleBtn" class="bx bx-menu toggler-btn"></i>
                    </div>


                    <ul class="list">
                        <li class="title">
                            <hr />
                        </li>
                        <li class="list-item active">
                            <a class="nav-link" href="/Admin/Index">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Menu
                                </span>
                            </a>
                        </li>
                        <li class="list-item">
                            <a class="nav-link" href=" @Url.Action("Account", "Admin") ">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Users
                                </span>
                            </a>
                        </li>
                    </ul>

                    <ul class="list">
                        <li class="title">
                            <hr />
                        </li>
                        <li class="list-item">
                            <a class="nav-link" href=" @Url.Action("Chartcontrol", "Admin") ">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Chart
                                </span>
                            </a>
                        </li>             
                        <li class="list-item">
                            <a class="nav-link" href="@Url.Action("Orders","Admin")">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Orders
                                </span>
                            </a>
                        </li>
                        <li class="list-item">
                            <a class="nav-link" href="@Url.Action("Delivery","Admin")">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Delivery
                                </span>
                            </a>
                        </li>

                    </ul>
                    <hr />
                    <ul class="list">
                        <li class="list-item">
                            <a class="nav-link" href="/Home">
                                <i>
                                    <img class="logoo" src="data:image/png;base64," />
                                </i>
                                <span class="link-name">
                                    Home Page
                                </span>
                            </a>
                        </li>
                        <ul />
                </div>
            </nav>
        </div>

        @*Bên dưới là phần Breadcrumb*@
        <article class="main">
            <div class="container MainContainer">
                <div class="header ">
                    <ol class="breadcrumb bread-ol row-cols-5">
                        <li class="list-group-item breadcrumb-item bread-item col-1">
                            <a class="nav-link" href="@Url.Action("Index","Admin")">Menu</a>
                        </li>
                        <li class="breadcrumb-item bread-item col-2">@ViewBag.PageName</li>

                        <li class=" bread-item  bread-item bread-itemFunction">
                            @{ string searchView = ViewBag.SearchView;
                                string searchController = ViewBag.SearchController;
                            }
                            @*searchView và searchController sẽ được truyền vào ở mỗi View khác nhau*@
                            <form action="@Url.Action(searchView, searchController)"> @RenderSection("BreadFunction", required: false)</form>

                        </li>

                    </ol>
                </div>

                <div class=" mainbody">
                    @RenderBody()

                </div>
            </div>
        </article>
    </div>

    <script src="~/Content/Admin.js" defer></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
